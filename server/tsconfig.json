{
	"compilerOptions": {
		"module": "commonjs",
		"esModuleInterop": true,
		"target": "es6",
		"moduleResolution": "node",
		"allowJs": true,
		"sourceMap": true,
		"outDir": "dist",
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"]
		},
		"typeRoots": ["./src/types"]
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "./public", "dist", "test"]
}
